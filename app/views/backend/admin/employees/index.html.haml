%ol.breadcrumb.bc-3
  %li
    %a{:href => "#{admin_dashboard_path}"}
      %i.fa-home>
      Home
  %li.active
    %a{:href => "#{admin_employees_path}"} Employees
.row
  .col-md-6.col-sm-6
    %h2 Employees
.row
  .col-md-6.col-sm-6
    = link_to  new_admin_employee_path , remote: true , class: 'btn btn-md btn-primary btn-icon icon-left pull-left', style: 'margin-top: 15px !important;' do
      %i.entypo-plus
      New Employee
  .col-md-6.col-sm-6
    .search-form-contaner
      = search_form_for @search , url: search_admin_employees_path , method: :post , class: 'search-form-full' do |f|
        .form-group
          = f.text_field :first_name_cont, class: "form-control", placeholder: "Search..."
          %i.entypo-search
  %br
  %br
  %hr
  .line
  .col-md-12
    %table.table.table-responsive.image-table#remote_table
      %thead
        %tr
          %th= sort_link @search, :first_name, "Name"
          %th Telephone
          %th Address
          %th= sort_link @search, :hourly_rate, "Hourly Rate"
          %th.text-center Actions
      %tbody
        - @employees.each do |employee|
          = employee.row
    %nav.text-center-xs
      %center
        = will_paginate @employees,:page_links => false, renderer: BootstrapPagination::Rails